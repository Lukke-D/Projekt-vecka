def clickLA(e):
    Ja9.bgcolor = ORANGE_200
    Ja9.content.value = Ja.content.value
    Ja9.update()
    Ja2.content.value = ""
    Ja2.bgcolor = None
    Ja2.update()
    Ja.bgcolor = None
    Ja.content.value = ""
    Ja.update()

def clickBost(e):
    Ja9.bgcolor = ORANGE_200
