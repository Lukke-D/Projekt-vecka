def main(page: ft.Page):




    st = ft.Stack(
            [
                ft.Image(
                    src=f"ball.jpg",
                    width=1400,
                    height=800,
                    fit=ft.ImageFit.CONTAIN,
                ),
                ft.Row(
                    [
                        ft.Text(
                            "Basketboll tournament",
                            color="white",
                            size=40,
                            opacity=0.5,
                        )
                    ],
                    alignment=ft.MainAxisAlignment.CENTER,
                ),
                cv.Canvas(
                    width=150,
                    height=100,
                    shapes=[
                        cv.Line(100, 10, 300, 10,
                                paint=ft.Paint("white")),
                        cv.Line(100, 80, 300, 80,
                                paint=ft.Paint("white")),
                        cv.Line(300, 10, 300, 80,
                                paint=ft.Paint("white")),
                        cv.Line(300, 45, 500, 45,
                                paint=ft.Paint("white")),
                        cv.Line(500, 45, 500, 190,
                                paint=ft.Paint("white")),
                        cv.Line(500, 110, 800, 110,
                                paint=ft.Paint("white")),
                        cv.Line(100, 295, 300, 295,
                                paint=ft.Paint("white")),
                        cv.Line(100, 365, 300, 365,
                                paint=ft.Paint("white")),
                        cv.Line(300, 295, 300, 365,
                                paint=ft.Paint("white")),
                        cv.Line(300, 335, 500, 335,
                                paint=ft.Paint("white")),
                        cv.Line(500, 335, 500, 400,
                                paint=ft.Paint("white")),
                        cv.Line(100, 150, 300, 150,
                                paint=ft.Paint("white")),
                        cv.Line(300, 150, 300, 220,
                                paint=ft.Paint("white")),
                        cv.Line(100, 220, 300, 220,
                                paint=ft.Paint("white")),
                        cv.Line(300, 190, 500, 190,
                                paint=ft.Paint("white")),
                        cv.Line(500, 190, 500, 190,
                                paint=ft.Paint("white")),
                        cv.Line(100, 430, 300, 430,
                                paint=ft.Paint("white")),
                        cv.Line(100, 500, 300, 500,
                                paint=ft.Paint("white")),
                        cv.Line(300, 430, 300, 500,
                                paint=ft.Paint("white")),
                        cv.Line(300, 465, 500, 465,
                                paint=ft.Paint("white")),
                        cv.Line(500, 465, 500, 400,
                                paint=ft.Paint("white")),
                        cv.Line(500, 400, 800, 400,
                                paint=ft.Paint("white")),
                        cv.Line(800, 400, 800, 110,
                                paint=ft.Paint("white")),
                        cv.Line(800, 250, 1250, 250,
                                paint=ft.Paint("white")),
                ]),



                Ja,

               Ja2,

                Ja3,

              Ja4,

                Ja5,

                Ja6,

                Ja7,

                Ja8,

                Ja9,

                Ja10,

                Ja11,

                Ja12,

                Ja13,

                Ja14,

                JaLakers,

                JaCeltics,

                JaNY,

                Ja15,

                Ja16,

                JaGold,

                JaCL,

                Ja17,

                JaCHAMP,

                Ja18,

                Ja19




            ],


        )
    page.add(st)
    page.update()







ft.app(main)
